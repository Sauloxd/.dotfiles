#!/bin/bash
#
# Refactor all this loose binaries
#
# Common Binnaries
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH";
#
# Auto jump do hideki
#
# the login $SHELL isn't always the one used
# NOTE: problems might occur if /bin/sh is symlinked to /bin/bash
if [ -n "${BASH}" ]; then
    shell="bash"
elif [ -n "${ZSH_NAME}" ]; then
    shell="zsh"
elif [ -n "${__fish_datadir}" ]; then
    shell="fish"
elif [ -n "${version}" ]; then
    shell="tcsh"
else
    shell=$(echo ${SHELL} | awk -F/ '{ print $NF }')
fi

# prevent circular loop for sh shells
if [ "${shell}" = "sh" ]; then
    return 0

# check local install
elif [ -s ~/.autojump/share/autojump/autojump.${shell} ]; then
    source ~/.autojump/share/autojump/autojump.${shell}

# check global install
elif [ -s /usr/local/share/autojump/autojump.${shell} ]; then
    source /usr/local/share/autojump/autojump.${shell}
fi
# check custom install         
if [ -s /usr/local/Cellar/autojump/22.5.1/share/autojump/autojump.${shell} ]; then         
    source /usr/local/Cellar/autojump/22.5.1/share/autojump/autojump.${shell}         
fi

#nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# MongoDB
export PATH=$PATH:"/Users/sauloxd/mongodb/bin";
#
# Redis Binary
export PATH="$PATH:/Users/sauloxd/redis-3.2.3/src";
#
# Chrome drivers
export PATH="$PATH:/Users/sauloxd/chromedrivers";
#
# Maven
export PATH="$PATH:/Users/sauloxd/Applications/apache-maven-3.3.9/bin";
#
# PSQL
export PATH="$PATH:/Applications/Postgres.app/Contents/Versions/9.5/bin";
#
# RACKET
export PATH="$PATH:/Applications/Racket v6.8/bin";
#
# Android Studio
export PATH="$PATH:/Users/sauloxd/Library/Android/sdk/platform-tools";
export PATH="$PATH:/Users/sauloxd/Library/Android/sdk/tools";
#
# WineHQ
export PATH=$PATH:"/Applications/Wine Stable.app/Contents/Resources/wine/bin";
#
# Node
export PATH=$PATH:"/usr/local/bin/node";
#
# NPM
export PATH=~/.npm-global/bin:$PATH
#
# PhantomJS
export PATH=$PATH:"$HOME/phantomjs/bin";
#
# Terraform
export PATH=$PATH:"$HOME/Terraform";
#
# Python
export PATH="/usr/local/Cellar/python3/3.6.2/bin:$PATH"
#
# Tmux
export PATH="/usr/local/Cellar/tmux/2.5/bin:$PATH"
